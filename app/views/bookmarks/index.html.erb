<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<div id="form">
  <%= render "form", bookmark: @bookmark %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th class = centro>url</th>
      <th>Categories</th>
      <th class = centro>Kinds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="bookmarks-list">
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.url %></td>
        <td>
          <% bookmark.categories.each do |listCategory| %>
            <%= listCategory %> <br>
          <% end %>
        </td>
        <td>
          <% bookmark.kinds.each do |listKind| %>
            <%= listKind %> 
            <br>
          <% end %>
        </td>
        <td><%= link_to 'Show', bookmark_path(bookmark) %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?', remote:true }, class:"delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="new-mark">
  <%= link_to 'New Bookmark', new_bookmark_path %>
</div>

